<Page
    x:Class="EdutalkTeacherUWP.Route.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EdutalkTeacherUWP.Route.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:vm="using:EdutalkTeacherUWP.Route.VIewModels"
    xmlns:view="using:EdutalkTeacherUWP.Route.Views"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:MainViewModel />
    </Page.DataContext>
    
    <NavigationView ItemInvoked="NavigationView_ItemInvoked"
                    x:Name="NavView" >
        <NavigationView.MenuItems>
            <NavigationViewItemHeader Content="Edutalk" />
            <NavigationViewItem Content="Home"/>
            <NavigationViewItemSeparator/>

            <NavigationViewItem Content="Messenger"/>
            <NavigationViewItemSeparator/>
 
            <NavigationViewItem Content="Notification"/>
            <NavigationViewItemSeparator/>

            <NavigationViewItem Content="Settings"/>
            <NavigationViewItemSeparator/>
        </NavigationView.MenuItems>

        <Frame x:Name="ContentFrame" 
           NavigationFailed="ContentFrame_OnNavigationFailed"/>
    </NavigationView>
</Page>
