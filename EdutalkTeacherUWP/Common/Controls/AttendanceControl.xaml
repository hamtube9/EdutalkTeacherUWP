<UserControl
    x:Class="EdutalkTeacherUWP.Common.Controls.AttendanceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:cic="using:EdutalkTeacherUWP.Common.Controls"
    d:DesignHeight="48"
    >
    <Border CornerRadius="12" Background="{x:Bind ColorBorder}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <cic:CircleImageControl Image="{x:Bind Source}" HorizontalAlignment="Center" VerticalAlignment="Center"   Height="32" Width="32"/>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{Binding Title}" VerticalAlignment="Center"/>

                    <TextBlock Text="{Binding TotalStudent}" Grid.Row="1" VerticalAlignment="Center"/>

                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
